#ifndef __EPD_H
#define __EPD_H


//-----------------EPD端口定义----------------
#define EPD_SCL_Pin GPIO_Pin_1
#define EPD_SDA_Pin GPIO_Pin_2
#define EPD_RES_Pin GPIO_Pin_3
#define EPD_DC_Pin GPIO_Pin_4
#define EPD_CS_Pin GPIO_Pin_5
#define EPD_BUSY_Pin GPIO_Pin_6

#define EPD_SCL_Clr() GPIO_ResetBits(GPIOA, EPD_SCL_Pin) // SCL
#define EPD_SCL_Set() GPIO_SetBits(GPIOA, EPD_SCL_Pin)

#define EPD_SDA_Clr() GPIO_ResetBits(GPIOA, EPD_SDA_Pin) // SDA
#define EPD_SDA_Set() GPIO_SetBits(GPIOA, EPD_SDA_Pin)

#define EPD_RES_Clr() GPIO_ResetBits(GPIOA, EPD_RES_Pin) // RES
#define EPD_RES_Set() GPIO_SetBits(GPIOA, EPD_RES_Pin)

#define EPD_DC_Clr() GPIO_ResetBits(GPIOA, EPD_DC_Pin) // DC
#define EPD_DC_Set() GPIO_SetBits(GPIOA, EPD_DC_Pin)

#define EPD_CS_Clr() GPIO_ResetBits(GPIOA, EPD_CS_Pin) // CS
#define EPD_CS_Set() GPIO_SetBits(GPIOA, EPD_CS_Pin)

#define EPD_BUSY() GPIO_ReadInputDataBit(GPIOA, EPD_BUSY_Pin)

#define EPD_W 128
#define EPD_H 296

typedef struct
{
    u8 *Image;
    u16 Width;
    u16 Height;
    u16 WidthMemory;
    u16 HeightMemory;
    u16 Color;
    u16 Rotate;
    u16 WidthByte;
    u16 HeightByte;
} PAINT;
extern PAINT Paint;

#define ROTATE_0 0     // 屏幕正向显示
#define ROTATE_90 90   // 屏幕旋转90度显示
#define ROTATE_180 180 // 屏幕旋转180度显示
#define ROTATE_270 270 // 屏幕旋转270度显示

#define WHITE 0xFF // 显示白色
#define BLACK 0x00 // 显示黑色

void EPD_GPIOInit(void);                             // 初始化GPIO
void EPD_WR_Bus(u8 dat);                             // 模拟SPI时序
void EPD_WR_REG(u8 reg);                             // 写入一个命令
void EPD_WR_DATA8(u8 dat);                           // 写入一个字节
void EPD_AddressSet(u16 xs, u16 ys, u16 xe, u16 ye); // 设置位置函数
void EPD_Init(void);                                 // 初始化屏幕

void Epaper_READBUSY(void);
void EPD_Update(void);

void Paint_NewImage(u8 *image, u16 Width, u16 Height, u16 Rotate, u16 Color);           // 创建画布控制显示方向
void EPD_Clear(u16 Color);                                                              // 清屏函数
void EPD_DrawPoint(u16 Xpoint, u16 Ypoint, u16 Color);                                  // 画点
void EPD_DrawLine(u16 Xstart, u16 Ystart, u16 Xend, u16 Yend, u16 Color);               // 画线
void EPD_DrawRectangle(u16 Xstart, u16 Ystart, u16 Xend, u16 Yend, u16 Color, u8 mode); // 画矩形
void EPD_DrawCircle(u16 X_Center, u16 Y_Center, u16 Radius, u16 Color, u8 mode);        // 画圆
void EPD_ShowChar(u16 x, u16 y, u16 chr, u16 size1, u16 color);                         // 显示字符
void EPD_ShowString(u16 x, u16 y, u8 *chr, u16 size1, u16 color);                       // 显示字符串
void EPD_ShowNum(u16 x, u16 y, u32 num, u16 len, u16 size1, u16 color);                 // 显示数字
void EPD_ShowChinese(u16 x, u16 y, u16 num, u16 size1, u16 color);                      // 显示中文
void EPD_ShowPicture(u16 x, u16 y, u16 sizex, u16 sizey, const u8 BMP[], u16 color);    // 显示图片
void EPD_Display(unsigned char *Image);                                                 // 更新到屏幕
void EPD_GUIInit(void);                                                                 // 屏幕GUI初始化

#endif
